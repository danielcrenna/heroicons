@inherits Icon
<DynamicComponent Type="@_iconType" Parameters="@AdditionalAttributes" />

@code
{
    [Parameter] public IconType Type { get; set; } = IconFactory.DefaultIconType;
    [Parameter] public IconStyle Style { get; set; } = IconStyle.Solid;
    [Parameter] public IconSize Size { get; set; } = IconSize.Regular;

    private Type? _iconType;

    protected override Task OnParametersSetAsync()
    {
        _iconType = IconFactory.GetIconType(Type, Style, Size);
        return Task.CompletedTask;
    }
}